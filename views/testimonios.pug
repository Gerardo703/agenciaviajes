extends ./layout/index

block contenido
    main.container.mt-5
        h1.text-center.mt-5 #{pagina}

        
        blockquote.text-center Lee sobre nuestros clientes y sus experiencias
        include ./layout/bloque_testimonios
            
        .row
            .col-md-12
                h2.d-block.w-100.text-center Agregar un Testimonio
                
                if(errores)
                    each error in errores
                        .alert.col.alert-danger.text-center #{error.mensaje}

            .row.justify-content-center.col
                .col-md-8.col
                    form(action="" method="POST")
                        .form-group
                            label(for="nombre") Nombre 
                            input#nombre(type="text", placeholder="Nombre", name="nombre", class="form-control", value=nombre)
                        .form-group
                            label(for="email") Email
                            input#email(type="text", placeholder="Email", name="email", class="form-control", value=email)
                        .form-group
                            label(for="mensaje") Mensaje 
                            textarea#mensaje(name="mensaje", placeholder="Mensaje", class="form-control", rows=3, value=mensaje) 
                        input.btn.btn-success.btn-block(type="submit")    
                
            